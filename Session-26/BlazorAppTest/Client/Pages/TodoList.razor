@page "/todolist"
<h3>TodoList</h3>

<ul>
    @foreach (var todoItem in todoList)
    {
        <li>@todoItem.Title - Finished: @todoItem.Finished</li>
    }
   

</ul>


@code {
    private List<TodoListDto> todoList = new List<TodoListDto>
    {
      new TodoListDto
        {
        Title = "Mock1",
        Finished = true
        },

      new TodoListDto
        {
        Title = "Mock2",
        Finished = true
      }

    };

}
