@page "/"
@using FuelStation.Enums;
@inject EmployeeUser User;

<PageTitle>Index</PageTitle>

<h1>Fuel Station App!</h1>
<div class="row">
    <div class="col-md-6">
        <button type="button" class="btn btn-primary" @onclick='()=> SetUserRole(EmployeeType.Manager)'>Manager</button>
        <button type="button" class="btn btn-primary" @onclick='()=> SetUserRole(EmployeeType.Staff)'>Staff</button>
        <button type="button" class="btn btn-primary" @onclick='()=> SetUserRole(EmployeeType.Cashier)'>Cashier</button>
    </div>
</div>

Welcome!

@code{

    public EmployeeType role { get; set; }

    void SetUserRole(EmployeeType emp)
    {
        User.Role = emp;
    }

}

